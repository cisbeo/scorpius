{
  "openapi": "3.0.3",
  "info": {
    "title": "Tender Analysis API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/tenders/analyze": {
      "post": {
        "summary": "Lancer analyse IA des documents DCE",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "documentIds": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "minItems": 1,
                    "maxItems": 10
                  },
                  "analysisName": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100
                  },
                  "options": {
                    "type": "object",
                    "properties": {
                      "includeRecommendations": {
                        "type": "boolean",
                        "default": true
                      },
                      "detailedExtraction": {
                        "type": "boolean",
                        "default": false
                      }
                    }
                  }
                },
                "required": ["documentIds"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Analyse lancée",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "analysisId": {
                          "type": "string"
                        },
                        "status": {
                          "type": "string",
                          "enum": ["PROCESSING"]
                        },
                        "estimatedCompletionTime": {
                          "type": "string",
                          "format": "date-time"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/tenders/{analysisId}/results": {
      "get": {
        "summary": "Récupérer résultats d'analyse",
        "parameters": [
          {
            "name": "analysisId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Résultats d'analyse",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "analysisId": {
                          "type": "string"
                        },
                        "status": {
                          "type": "string",
                          "enum": ["PROCESSING", "COMPLETED", "ERROR"]
                        },
                        "complexityScore": {
                          "type": "number",
                          "minimum": 1,
                          "maximum": 10
                        },
                        "overallConfidence": {
                          "type": "number",
                          "minimum": 0,
                          "maximum": 1
                        },
                        "marketScope": {
                          "type": "object",
                          "properties": {
                            "title": {
                              "type": "string"
                            },
                            "description": {
                              "type": "string"
                            },
                            "sector": {
                              "type": "string",
                              "enum": ["INFRASTRUCTURE", "DEVELOPMENT", "CYBERSECURITY", "MIXED"]
                            },
                            "estimatedValue": {
                              "type": "number"
                            }
                          }
                        },
                        "technicalRequirements": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "category": {
                                "type": "string"
                              },
                              "requirement": {
                                "type": "string"
                              },
                              "mandatory": {
                                "type": "boolean"
                              },
                              "confidence": {
                                "type": "number",
                                "minimum": 0,
                                "maximum": 1
                              }
                            }
                          }
                        },
                        "evaluationCriteria": {
                          "type": "object",
                          "properties": {
                            "technical": {
                              "type": "number",
                              "minimum": 0,
                              "maximum": 100
                            },
                            "financial": {
                              "type": "number",
                              "minimum": 0,
                              "maximum": 100
                            },
                            "other": {
                              "type": "number",
                              "minimum": 0,
                              "maximum": 100
                            }
                          }
                        },
                        "timeConstraints": {
                          "type": "object",
                          "properties": {
                            "submissionDeadline": {
                              "type": "string",
                              "format": "date-time"
                            },
                            "projectDuration": {
                              "type": "number"
                            },
                            "keyMilestones": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "name": {
                                    "type": "string"
                                  },
                                  "date": {
                                    "type": "string",
                                    "format": "date"
                                  }
                                }
                              }
                            }
                          }
                        },
                        "sections": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "type": {
                                "type": "string",
                                "enum": ["CCTP", "CCP", "BPU", "RC", "OTHER"]
                              },
                              "confidence": {
                                "type": "number",
                                "minimum": 0,
                                "maximum": 1
                              },
                              "pageCount": {
                                "type": "number"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}